<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:title="Earthquake Settings">

    <ListPreference
        android:defaultValue="@string/pref_order_by_default"
        android:entries="@array/pref_order_by_labels_array"
        android:entryValues="@array/pref_order_by_values_array"
        android:key="@string/pref_order_by_key"
        android:title="@string/pref_order_by_title"/>

    <EditTextPreference
        android:defaultValue="@string/pref_min_magnitude_default"
        android:inputType="numberDecimal"
        android:key="@string/pref_min_magnitude_key"
        android:selectAllOnFocus="true"
        android:title="@string/pref_min_magnitude_title"/>


</PreferenceScreen>